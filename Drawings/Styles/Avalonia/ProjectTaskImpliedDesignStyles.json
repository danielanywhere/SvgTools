											},
											{
												"Name": "VerticalAlignment",
												"Value": "Stretch"
											}
										],
										"Nodes":
										[
											{
												"Name": "ContentPresenter",
												"Properties":
												[
													{
														"Name": "Content",
														"Value": "{TemplateBinding Content}"
													},
													{
														"Name": "ContentTemplate",
														"Value": "{TemplateBinding ContentTemplate}"
													},
													{
														"Name": "HorizontalAlignment",
														"Value": "{TemplateBinding HorizontalContentAlignment}"
													},
													{
														"Name": "VerticalAlignment",
														"Value": "{TemplateBinding VerticalContentAlignment}"
													}
												]
											}
										]
									}
								]
							}
						]
					}
				]
			},
			{
				"Comment": "Hover image state when normal.",
				"ExtensionType": "Style",
				"Selector": "ListBoxItem Image[Tag=Hover]",
				"Settings":
				[
					{
						"Name": "IsVisible",
						"Value": "False"
